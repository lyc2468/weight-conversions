{
    "name": "lyc2468/weight-conversions",
    "description": "Weight conversions in PHP",
    "keywords": [
        "lyc2468",
        "weight-conversions"
    ],
    "homepage": "https://github.com/lyc2468/weight-conversions",
    "license": "MIT",
    "authors": [
        {
            "name": "Skies",
            "email": "709029461@qq.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "pestphp/pest": "^1.20",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "Skies\\WeightConversions\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Skies\\WeightConversions\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
